@using CityWeatherApp.Models;
@model List<GeoLocation>;

@if(Model.Count <= 0)
{
    <span>No results found</span>
} else
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Country</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (GeoLocation location in Model)
            {
                <tr>
                    <th>@(i++)</th>
                    <td>
                        <a asp-controller="Weather" asp-action="GetWeather" asp-route-city="@location" asp-route-lon="@location.lon" asp-route-lat="@location.lat">
                            @location.name
                        </a>
                    </td>
                    <td>@location.country</td>
                    <td>@location.state</td>
                </tr>
            }
        </tbody>
    </table>
}

